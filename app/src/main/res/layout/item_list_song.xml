<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/item_list_song_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_music_favorite_list"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_list_song_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        tools:text="Title" />

    <ImageButton
        android:id="@+id/item_list_song_add"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end|center"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_button_color_transparent_borderless"
        app:srcCompat="@drawable/ic_favorite_home"
        tools:ignore="ContentDescription" />

</LinearLayout>